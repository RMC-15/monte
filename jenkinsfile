pipeline {
    agent any
    stages {
        stage('Preparacion') {
            steps {
                git branch: rama, url:url
            }
        }
        stage('Revision'){
            steps{
                sh"pytest || echo Pruebas Ok"
            }
        }
        stage('Parametria'){
            steps{
                echo "Parametrizando..."
            }
        }
        stage('Build'){
            steps{
                sh"""
                    mv Docker/* .
                    mv App/* .
                    rm -rf Docker
                    rm -rf App
                    docker build -t monte/app:latest .
                """
            }
        }
    }
}